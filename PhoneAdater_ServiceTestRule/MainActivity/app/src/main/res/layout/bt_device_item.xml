<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <EditText android:id="@+id/device_name_textbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
  <TextView android:id="@+id/device_mac_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
  <CheckBox android:id="@+id/device_checked_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
</LinearLayout>
