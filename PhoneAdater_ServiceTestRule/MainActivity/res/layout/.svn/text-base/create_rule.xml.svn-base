<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <View android:layout_width="fill_parent" android:layout_height="10dip"/>
  <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" >
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
  	android:text="@string/rule_name"/>
  <EditText android:id="@+id/rule_name_textbox"
  android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dip"/>
  </LinearLayout>
  <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/cur_state"/>
  <Spinner android:id="@+id/choose_cur_state_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:prompt="@string/choose_state"/>
  <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/new_state"/>
  <Spinner android:id="@+id/choose_new_state_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:prompt="@string/choose_state"/>
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/priority"/>
  <Spinner android:id="@+id/choose_priority_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:prompt="@string/choose_priority"/>
  <View android:layout_width="fill_parent" android:layout_height="20dip"/>
  <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
  	<Button android:id="@+id/add_filter_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
  	android:text="@string/add_filter_btn_text"/>
  	<Button android:id="@+id/save_rule_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
  	android:text="@string/save_rule_btn_text"/>
  </LinearLayout>
  <View android:layout_width="fill_parent" android:layout_height="20dip"/>
  <ListView android:id="@+id/filter_list" android:layout_width="fill_parent" android:layout_height="fill_parent"></ListView>
    
</LinearLayout>
